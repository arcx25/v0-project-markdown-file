# Environment
ENVIRONMENT=production
DEBUG=false

# Application
APP_NAME="ARCHITECT // VAULT"
APP_VERSION="1.0.0"
SECRET_KEY=your-secret-key-minimum-64-characters-long-generate-with-openssl-rand-hex-32

# Database
DATABASE_URL=postgresql+asyncpg://vault:strong_password@localhost:5432/vault
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_RATELIMIT_DB=2

# Session
SESSION_LIFETIME_HOURS=24
SESSION_SLIDING_WINDOW=true
SESSION_CIRCUIT_BINDING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_CIRCUIT=500
RATE_LIMIT_AUTH_ATTEMPTS=5

# PGP
GPG_HOME_DIR=/var/lib/vault/gpg
GPG_BINARY=/usr/bin/gpg
CHALLENGE_LENGTH=32
CHALLENGE_TTL_SECONDS=300
MAX_AUTH_ATTEMPTS=5
LOCKOUT_DURATION_SECONDS=900

# Monero
MONERO_RPC_URL=http://localhost:18081/json_rpc
MONERO_WALLET_RPC_URL=http://localhost:18083/json_rpc
MONERO_WALLET_NAME=vault_wallet
MONERO_WALLET_PASSWORD=strong_wallet_password
MONERO_CONFIRMATIONS_REQUIRED=10

# Subscriptions (USD per month)
SUBSCRIPTION_FREELANCER_USD=50
SUBSCRIPTION_OUTLET_USD=500
SUBSCRIPTION_ENTERPRISE_USD=2000

# Tor
TOR_ENABLED=true
ONION_ADDRESS=your56characteronionaddressv3goes here.onion

# Storage
UPLOAD_DIR=/var/lib/vault/uploads
MAX_UPLOAD_SIZE_MB=25

# Celery
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/vault/app.log

# Admin
INITIAL_ADMIN_USERNAME=admin
# Generate initial admin PGP key and paste public key here
INITIAL_ADMIN_PGP_KEY=
